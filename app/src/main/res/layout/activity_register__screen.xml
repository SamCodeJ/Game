<!--                android:paddingLeft="15dp"-->
<!--                android:drawableLeft="@drawable/ic_name"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/edit_round"-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="50dp"/>-->

<!--            <EditText-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/edit_round"-->
<!--                android:drawableLeft="@drawable/ic_dob"-->
<!--                android:hint=" Date of Birth"-->
<!--                android:paddingLeft="15dp" />-->

<!--            <EditText-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/edit_round"-->
<!--                android:drawableLeft="@drawable/gender"-->
<!--                android:hint=" Gender"-->
<!--                android:paddingLeft="15dp" />-->

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:drawableLeft="@drawable/ic_email"
                android:hint=" Email"
                android:paddingLeft="15dp" />

            <EditText
                android:password="true"
                android:hint=" Password"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_lock"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="50dp"/>

            <EditText
                android:hint=" Date of Birth"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_dob"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="50dp"/>

            <EditText
                android:hint=" Country"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_country"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="50dp"/>

            <EditText
                android:hint=" Referral code (optional)"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_referral_code"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/registerBtn"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_round"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Register"/>

            <TextView
                android:layout_marginBottom="50dp"
                android:id="@+id/login_instead"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Already Registered?  Login" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>